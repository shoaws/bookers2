<div class="container">
    <div class="row">
        <div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
            <h1>welcome to <i class="fas fa-book"></i><strong>Bookers</strong> !!</h1>
            <p>In <i class="fas fa-book"></i><strong>Bookers</strong>,</p>
            <p>you can share and exchange your opinions , inpressions , and emotions</p>
            <p>about various books!</p>

            <div class="btn-wrapper col-10 mx-auto">
                <% if user_signed_in? %>
                    <div class="row">
                        <%= link_to user_path(current_user.id), class: "btn btn-info btn-sm btn-block mb-3 sign_in text-white text-decoration-none" do %>
                        Log in
                        <% end %>
                    </div>
                    <div class="row">
                        <%= link_to user_path(current_user.id), class: "btn btn-success btn-sm btn-block sign_up text-white text-decoration-none" do %>
                        Sign up
                        <% end %>
                    </div>
                <% else %>
                    <div class="row">
                        <%= link_to new_user_session_path, class: "btn btn-info btn-sm btn-block mb-3 sign_in text-white text-decoration-none" do %>
                        Log in
                        <% end %>
                    </div>
                    <div class="row">
                        <%= link_to new_user_registration_path, class: "btn btn-success btn-sm btn-block sign_up text-white text-decoration-none" do %>
                        Sign up
                        <% end %>
                    </div>
                <% end %>
        </div>
    </div>
</div>